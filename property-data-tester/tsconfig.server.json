{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // Temporarily disable to see if other errors surface
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "multer"] // Explicitly include multer types
  },
  "include": ["server/**/*.ts", "shared/**/*.ts", "worker.ts"],
  "exclude": ["node_modules", "src"]
}
